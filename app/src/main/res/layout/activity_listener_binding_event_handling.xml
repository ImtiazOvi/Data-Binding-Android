<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="aStudent"
            type="com.example.databindingadvance.StudentModel" />

        <variable
            name="handler"
            type="com.example.databindingadvance.eventbinding.ListenerBindingEventHandling.EventHandler" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@{aStudent.name}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@{String.valueOf(aStudent.age)}" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Button"
            android:onClick="@{() -> handler.handlerClick(aStudent.name)}"/>
        <!--or without listener lamda expression-->
        <!--        <Button-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="50dp"-->
        <!--            android:text="Button"-->
        <!--            android:onClick="@{(view) -> handlerClick()}"/>-->

    </LinearLayout>


</layout>


